{
  "name": "ðŸ“¬ Simple Email to Telegram",
  "description": "Forward email notifications directly to Telegram without AI processing",
  "steps": [
    {
      "step_type": "trigger", 
      "service_name": "gmail",
      "event_type": "new_email",
      "configuration": {
        "keywords": "support, customer, inquiry, question, help",
        "from_email": "",
        "max_results": 5
      }
    },
    {
      "step_type": "action",
      "service_name": "telegram", 
      "event_type": "send_message",
      "configuration": {
        "message_title": "New Email Received",
        "parse_mode": "HTML",
        "disable_web_page_preview": true,
        "disable_notification": false
      }
    }
  ],
  "metadata": {
    "telegram_enabled": true,
    "requires_telegram_connection": true,
    "ai_processing": false,
    "debug_mode": true
  }
}
