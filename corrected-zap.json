{
  "name": "Email to Notion Backup",
  "description": "Auto-generated Zap from gmail to notion",
  "steps": [
    {
      "step_type": "trigger",
      "service_name": "gmail",
      "event_type": "new_email",
      "configuration": {
        "keywords": "urgent",
        "from_email": "",
        "client_id": "{{integration.gmail}}",
        "client_secret": "{{integration.gmail}}",
        "refresh_token": "{{integration.gmail}}",
        "access_token": "{{integration.gmail}}"
      }
    },
    {
      "step_type": "action",
      "service_name": "notion",
      "event_type": "create_page",
      "configuration": {
        "api_key": "{{integration.notion}}",
        "database_id": "your-database-id-here",
        "title_template": "ðŸ“§ {{subject}} - {{sender}}",
        "content_template": "**From:** {{sender}}\n**Subject:** {{subject}}\n**Date:** {{timestamp}}\n\n**Content:**\n{{body}}",
        "integration_token": "{{integration.notion}}"
      }
    }
  ]
}
